<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.google.sites.medcare">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".RequestedAppointments"
            android:label="Pending Appointments"></activity>
        <activity android:name=".AboutUs"
            android:label="About Us"/>
        <activity android:name=".MaternalCare"
            android:label="Maternity"/>
        <activity android:name=".SettingsActivity"
            android:label="Settings"/>
        <activity android:name=".EveryAppointment"
            android:label="Patient History"/>
        <activity android:name=".Appointments"
            android:label="Patient History" />
        <activity android:name=".Ambulance"
            android:label="Ambulance"/>
        <activity android:name=".BloodBank"
            android:label="Blood Bank"/>
        <activity android:name=".Pharmacy"
            android:label="Pharmacy"/>
        <activity
            android:name=".NewsDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".PathologyLab"
            android:label="Pathology Lab"/>
        <activity android:name=".Hospital"
            android:label="Hospital"/>
        <activity android:name=".SignUp" />
        <activity android:name=".SignIn" />
        <activity
            android:name=".Home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

    <uses-permission android:name="android.permission.CALL_PHONE" />

</manifest>